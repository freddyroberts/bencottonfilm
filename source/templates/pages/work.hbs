{{#> page}}
    {{#*inline "main"}}
        <section class="container work">
        	<h1 class="work__heading">Work</h1>
			<ul class="work__list">
				{{#each videos}}
					<li class="work__list-item">
						<a class="work__item-link" href="{{ this.video }}">
							<div class="work__title">{{ this.title }}</div>
							<div class="work__description">{{ this.description }}</div>
							<img class="work__item-image" src="{{ this.image }}" alt="{{ this.title }}">
						</a>
					</li>
				{{/each}}
			</ul>
        </section>
    {{/inline}}
{{/page}}